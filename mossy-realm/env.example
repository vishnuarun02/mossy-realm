# R2 API credentials (for server-side listing)
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=mossyrealm-media

# Public URL base for media assets (no trailing slash)
R2_PUBLIC_BASE=https://media.mossyrealm.space

# Optional: prefix for music files (default: music/)
R2_PREFIX=music/

